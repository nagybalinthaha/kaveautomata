<Window x:Class="kaveautomata.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kávéautomata" Height="450" Width="800" Background="White">

    <Grid>
        <Image Source="kaveautomata13.png"
               Stretch="Uniform"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"/>


        <Viewbox Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Canvas Width="800" Height="450">

                <RadioButton Name="vaniliakaverad" Content="Vaníliás Kávé" Canvas.Left="322" Canvas.Top="117" Foreground="White" Checked="vaniliakaverad_Checked" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <RadioButton Name="cappucinorad" Content="Cappucino" Canvas.Left="322" Canvas.Top="150" Foreground="White" Checked="cappucinorad_Checked" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <RadioButton Name="feketekaverad" Content="Fekete Kávé" Canvas.Left="322" Canvas.Top="181" Foreground="White" Checked="feketekaverad_Checked" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <RadioButton Name="tejeskaverad" Content="Tejeskávé" Canvas.Left="322" Canvas.Top="210" Foreground="White" Checked="tejeskaverad_Checked" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <RadioButton Name="latterad" Content="Latte" Canvas.Left="322" Canvas.Top="242" Foreground="White" Checked="latterad_Checked" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <RadioButton Name="jegeskaverad" Content="Jegeskávé" Canvas.Left="322" Canvas.Top="274" Foreground="White" Checked="jegeskaverad_Checked" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <RadioButton Name="forrocsokirad" Content="Forrócsoki" Canvas.Left="322" Canvas.Top="303" Foreground="White" Checked="forrocsokirad_Checked" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <RadioButton Name="forrovizrad" Content="Forró víz" Canvas.Left="322" Canvas.Top="334" Foreground="White" Checked="forrovizrad_Checked" HorizontalAlignment="Center" VerticalAlignment="Top"/>

                <Button Name="rendeles" Content="Rendelés" Canvas.Left="458" Canvas.Top="197"
                        Click="rendelés_Click" Background="Transparent" BorderBrush="Transparent" Foreground="White" FontSize="8"/>
                <Button Name="Pluszcukor" Content="+ Cukor" Canvas.Left="457" Canvas.Top="120"
                        Click="Pluszcukor_Click" Background="Transparent" BorderBrush="Transparent" Foreground="White" FontSize="9"/>
                <Button Name="Minuszcukor" Content="- Cukor" Canvas.Left="457" Canvas.Top="162"
                        Click="Minuszcukor_Click" Background="Transparent" BorderBrush="Transparent" Foreground="White" FontSize="9"/>
            </Canvas>
        </Viewbox>
    </Grid>
</Window>
